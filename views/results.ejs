    <nav class="navBar">
        <div class="logo">
            <a href="http://localhost:3000/search">
                <img src="/resources/logo.png" alt="logo">
            </a>
        </div>
        <div class="searchForm">
            <form action="/result" method="post">
                <input type="text" name="query" id="query" placeholder="አዚህ ይጻፉ..." autocomplete="off" required>
                <button class="searchBtn" type="submit">
                    <img src="/resources/search_icon.png" alt="">
                </button>
            </form>
        </div>
    </nav>

    <div class="results">
        <div class="docCount">
            <%= documents.length%> ምላሽ ተገኝቷል
        </div>
        <% if(documents.length==0){ %>
            <h1 class="noDoc">ምንም ምላሽ አልተገኘም... ደግመው ይሞክሩ</h1>
            <% } else{ %>
                <% for(let doc of documents) { %>

                    <div class="docPreview">
                        <a class="title" href="/openDoc?value=<%= doc.doc_id%>">
                            <%= doc.title%>
                        </a>
                        <p class="docSnippet">
                            <%= doc.content.split(" ").slice(0, 30).join(" ") + " ..."%>
                        </p>
                        <hr>
                    </div>


                    <%} %>
                        <% } %>

    </div>

    <script>
        if (documents.length == null) {
            <h1>ምንም ምላሽ አልተገኘም... ደግመው ይሞክሩ</h1>
        }
    </script>
</body>

</html>